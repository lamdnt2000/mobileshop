<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="persistenceUnit">
        <class>com.mobileshop.group8.model.Category</class>
        <class>com.mobileshop.group8.model.Order</class>
        <class>com.mobileshop.group8.model.OrderDetail</class>
        <class>com.mobileshop.group8.model.Product</class>
        <class>com.mobileshop.group8.model.Role</class>
        <class>com.mobileshop.group8.model.User</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:sqlserver://localhost:1433;database=MobileStore"/>
            <property name="hibernate.connection.driver_class" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
        </properties>
    </persistence-unit>
</persistence>
